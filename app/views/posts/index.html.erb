<h2>Listing posts</h2>

<%= will_paginate %>
<div>
  <% @posts.each do |post| %>
    <div>
      <h3>
        <%= link_to post.title, post_path(post) %>
      </h3>
      <p><%= post.body %></p>
      <button class="btn btn-default"><%= link_to 'Show', post_path(post) %></button>
      <% if (user_signed_in? && (current_user.id == post.user_id)) || (current_user && current_user.admin?) %> 
        <button class="btn btn-default"><%= link_to 'Edit', edit_post_path(post) %></button>
        <button class="btn btn-default"><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></button>
      <% end %>
    </div>
  <% end %>
</div>
<%= will_paginate %>