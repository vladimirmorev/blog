%p
  %strong Title:
  = @post.title
%p
  %strong Text:
  = markdown(@post.body)
- if can? :edit, @post
  %button.btn.btn-default= link_to 'Edit', edit_post_path(@post) 
%button.btn.btn-default= link_to 'Back', posts_path
%h3
  Comments (#{@post.comments.count})
= render @post.comments
- if user_signed_in?
  %h2 Add a comment:
  = render 'comments/form'

